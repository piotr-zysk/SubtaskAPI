<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="SubtaskAPI.Models" assembly="SubtaskAPI">

  <class name="TaskItem" table="TaskItem">

    <id name="Id" unsaved-value="0">
      <column name="Id" sql-type="int" not-null="true"/>
      <generator class="increment" />
    </id>

    <property name="Title">
      <column name="Title" length="100" not-null="true" sql-type="nvarchar(100)" />
    </property>
    <property name="ParentId" >
      <column name="ParentId" not-null="true" sql-type="int" />
    </property>

    <property name="Done" >
    <column name="Done" sql-type="Boolean" />
    </property>
  </class>

</hibernate-mapping>